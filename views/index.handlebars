<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <img src="https://images.ctfassets.net/oewsurrg31ok/2BxSmgM43Mgv6ax7Jgp85i/947a6b18053f6de531de508a06983d98/2019_Burger_Banzai.png" class="w-100">
            <h1>Eat Da Burger!</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <ol>
           {{#each burgers}}
              {{#unless devoured}}
               {{>burger-block   devourBtn=true}}
               {{/unless}}
           {{/each}}
           </ol>
        </div>
        <div class="col-sm-6">
           <ol>
           {{#each burgers}}
              {{#if devoured}}
               {{>burger-block   devourBtn=false}}
               {{/if}}
           {{/each}}
           </ol>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <textarea id="text-box"></textarea>
            <button id="submit">Submit!</button>
            <p>Enter the burger you want to eat. Press "Submit" after"</p>
        </div>
    </div>
</div>